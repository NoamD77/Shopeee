<form asp-action="Edit" enctype="multipart/form-data">
    <div class="container">

        <div class="left">
            <img src="@Url.Content(GlobalVariables.webImagesPath)@Html.DisplayFor(modelItem =>Model.Picture)" style="width:100%" />
