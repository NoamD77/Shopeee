@model Shopeee.Controllers.ShoppingCartsController.ViewModel

@{
    ViewData["Title"] = "Shopping Cart";
}

@{
    var totalPrice = 0.0;
    var count_qty = 0;
}

<head>
    <link rel="stylesheet" href="~/css/shoppingcart.css" />
    <script src="~/js/APIfunctions.js"></script>
    @*<link rel="stylesheet" href="~\lib\bootstrap\dist\css\bootstrap-grid.css" />*@
</head>

<body>
    <div class="bag-details">
        @if (Model.Bagitems.Count() == 0)
        {
            <h2> Your Bag is empty </h2>
            <a class="btn btn-dark" asp-controller="Items"><i class="fa fa-arrow-left"></i> Continue Shopping</a>
        }
        else
        {
            @foreach (var item in Model.Bagitems)
            {
                totalPrice += (item.Price * Model.Bag.Quantity);
                count_qty += 1;
            }
            <div class="container">
                <div class="row sticky">
                    <div class="col sticky">
                        <div class="hdr">
                            <h4>my bag</h4>
                            <p>@count_qty Items in your cart</p>
                        </div>
                        @foreach (var item in Model.Bagitems)
                        {
                            <div class="cart-item">

                                <img src="~/imgs/@item.Picture" />

                                <div class="item-des">
                                    <p>₪@(@item.Price * Model.Bag.Quantity)</p>
                                    <a asp-controller="Items" asp-action="Details" asp-route-id="@item.Id">@item.Description</a>
                                    <div class="item-det">
                                        <p>@item.Color | </p>
                                        <p>@item.Gender | </p>
                                        <p>Qty @Model.Bag.Quantity</p>
                                    </div>
                                </div>

                                <div class="del-btn">
                                    <form asp-action="Delete" asp-route-id="@Model.Bag.CartID" method="post">
                                    <button type="submit">
                                        <i class="fa fa-trash"></i>
                                    </button>
                                    </form>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="col">
                        <div class="sticky">
                            <div class="total-price">
                                <h4>total price</h4>
                                <p>@totalPrice</p>
                                <span class="small">
                                    *For United States, applicable sales tax will be applied
                                </span>
                                <a class="btn btn-success" asp-action="CheckOut"><i class="fa fa-arrow-left"></i> Check Out</a>
                                <a class="btn btn-dark" asp-controller="Items"><i class="fa fa-arrow-left"></i> Continue Shopping</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="post-facebook">
        <h2>Write to us on facebook!</h2>
        <input id="facebookMessageInput" name="facebookMessage" />
        <button onclick="postToFacebook()" type="submit" value="Create">Share</button>
    </div>
</body>