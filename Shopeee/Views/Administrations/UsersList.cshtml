@using Shopeee.Areas.Identity;
@using Microsoft.AspNetCore.Identity;
@model IEnumerable<Shopeee.Areas.Identity.ApplicationUser>
@{
    ViewData["Title"] = "Users Management";
}

<a asp-action="Index">Back</a>
<a asp-area="Identity" asp-page="/Account/Register">Create a User</a>

<h1>List of Users</h1>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>User Name</th>
            <th>Email</th>
            <th>Name</th>
            <th>Birth Date</th>
            <th>Phone Number</th>
            <th>Roles</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Id</td>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.FirstName @user.LastName</td>
                <td>@user.BirthDate.ToShortDateString()</td>
                <td>@user.PhoneNumber</td>
                <td i-user="@user.Id"></td>
                <td>
                    <form asp-action="UpdateUser" asp-route-id="@user.Id" method="get">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Edit
                        </button>
                    </form>
                </td>
                <td>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>  