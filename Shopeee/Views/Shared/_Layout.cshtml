<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/site.css" />

    <title>@ViewData["Title"] - Shopeee</title>

</head>
<body>
    <header>
        <nav class="">
            <div class="header-container">
                <div class="blank-div">
                </div>
                <a class="navbar-brand" href="/Home/Index#home">Shopeee.</a>
                <partial name="_LoginPartial" />
            </div>
        </nav>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index#home">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Items" asp-action="Index">Explore</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index#our-brands-section">our brands</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index#our-team-section">our team</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/Home/Index#contact-section">Contact</a>
            </li>
        </ul>
    </header>

    <div class="body-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top">
        2021 - Shopeee - ANIS Team
        <i class="fas fa-map-marker-alt"></i>
        <i class="fas fa-chess-queen"></i>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>