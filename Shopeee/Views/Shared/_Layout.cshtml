<!DOCTYPE html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">

    <title>@ViewData["Title"] - Shopeee</title>

</head>
<body>
    <header>

        <!--navbar start-->

        <nav class="">
            <div class="header-container border-bottom box-shadow">
                <div class="blank-div">
                </div>
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Shopeee.</a>
                <div class="user-connected">
                    <p class="usr-connected-item">Hi Stav</p>
                    <img class="usr-connected-item" src="~/imgs/line.svg" />
                    <img class="usr-connected-item usr-connected-img" src="~/imgs/btn-user.svg" />
                    <img class="usr-connected-item usr-connected-img" src="~/imgs/btn-like.svg" />
                    <img class="usr-connected-item usr-connected-img" src="~/imgs/btn-disconnect.svg" />
                </div>

                <div class="user-disconnected">
                    <button class="button usr-disconnected-item btn-sign-in"><span>Sign In</span></button>
                    <a asp-area="" asp-controller="Users" asp-action="Create">
                        <button class="button btn-sign-up"><span>Sign Up </span></button>
                    </a>
                </div>
                <partial name="_LoginPartial" />
            </div>
        </nav>

        <!-- navbar end-->
        <!-- navbar-buttons start-->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Explore">Explore</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Sales">Sales</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="AboutUs">About</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Contact">Contact</a>
            </li>
        </ul>
    </header>

    <div class="body-container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted footer-container">
                2021 - Shopeee - ANIS Team
        </footer>*@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
