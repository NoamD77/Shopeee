<script>
    presearch = null
    document.getElementById('btn_search').addEventListener('click', function (e) {
        //Run LiveSearch on ever key up
        let value = document.getElementById('txt_search').value
        if (value != presearch) {
            Search(value)
            presearch = value
        }
    });

    function Search(value) {
        //window.location.href = window.location.href + "?search=" + value;
        $.ajax({
            type: "GET",
            url: "@Url.Action("Index", "Brands")",
            data: {
                search: value
            },
            datatype: "html",
            success: function (data) {
                $('#con').html(data);
                document.getElementById('txt_search').value = value
                // Insert the returned search results html into the result element
                //$('#con').empty();
                //$('#con').html(data);
                //window.location.href = window.location.href.split("?")[0] + "?search=" + value;

            }
        });
    }
</script>
