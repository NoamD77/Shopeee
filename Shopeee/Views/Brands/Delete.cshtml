@model Shopeee.Models.Brand
@using Shopeee.Class;
@{
    ViewData["Title"] = "Delete";
}

<head>
    <link rel="stylesheet" href="~/css/ItemDetailsStyleSheet.css" />
</head>


<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <div class="container">

        <div class="left">
            <img src="@Url.Content(GlobalVariables.webImagesPath)@Html.DisplayFor(modelItem =>Model.Logo)" style="width:100%" />
        </div>


        <div class="right">
            <p><h1>@Html.DisplayFor(modelItem => Model.Name)</h1></p>
        </div>

    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
